(ns redolist.routes
    (:require-macros [secretary.core :refer [defroute]])
    (:import goog.History)
    (:require [secretary.core :as secretary]
              [goog.events :as events]
              [goog.history.EventType :as EventType]
              [re-frame.core :as re-frame]))

(defn hook-browser-navigation! []
  (doto (History.)
    (events/listen
     EventType/NAVIGATE
     (fn [event]
       (secretary/dispatch! (.-token event))))
    (.setEnabled true)))

(defn app-routes []
  (secretary/set-config! :prefix "#")
  ;; --------------------
  ;; define routes here
  (defroute "/" []
    (re-frame/dispatch [:set-display-type :all]))

  (defroute "/active" []
    (re-frame/dispatch [:set-display-type :active]))

  (defroute "/completed" []
    (re-frame/dispatch [:set-display-type :completed]))


  ;; --------------------
  (hook-browser-navigation!))
